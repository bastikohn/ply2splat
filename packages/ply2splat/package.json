{
  "name": "ply2splat",
  "version": "0.4.4",
  "description": "Convert Gaussian Splatting PLY files to SPLAT format - with native and WASM support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./wasm": {
      "types": "./wasm/ply2splat_wasm.d.ts",
      "import": "./wasm/ply2splat_wasm.js"
    }
  },
  "files": [
    "dist",
    "wasm",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node --test test/*.test.mjs"
  },
  "keywords": [
    "graphics",
    "gaussian-splatting",
    "ply",
    "splat",
    "3d",
    "wasm",
    "webassembly"
  ],
  "author": "Bastian Kohn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bastikohn/ply2splat"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "optionalDependencies": {
    "ply2splat-native": "^0.4.4"
  }
}
