{
  "name": "@ply2splat/native",
  "version": "0.5.2",
  "description": "Native Node.js bindings for ply2splat",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bastikohn/ply2splat"
  },
  "license": "MIT",
  "bin": {
    "ply2splat": "./cli.js"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "browser.js"
  ],
  "scripts": {
    "build": "pnpm run build:debug",
    "build:debug": "napi build --platform",
    "build:release": "napi build --platform --release",
    "lint": "oxlint",
    "test": "ava",
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts",
    "version": "napi version"
  },
  "napi": {
    "binaryName": "ply2splat-native",
    "packageName": "@ply2splat/native",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "i686-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf",
      "aarch64-linux-android",
      "x86_64-unknown-freebsd",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-linux-androideabi",
      "wasm32-wasip1-threads"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@napi-rs/cli": "^3.4.1",
    "@oxc-node/core": "^0.0.34",
    "@types/node": "^24.10.1",
    "ava": "^6.4.1",
    "oxlint": "^1.30.0"
  },
  "prettier": {
    "printWidth": 120
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false
    },
    "timeout": "2m",
    "workerThreads": false,
    "environmentVariables": {
      "OXC_TSCONFIG_PATH": "./__test__/tsconfig.json"
    },
    "nodeArguments": [
      "--import",
      "@oxc-node/core/register"
    ]
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "optionalDependencies": {
    "@ply2splat/native-android-arm-eabi": "0.5.2",
    "@ply2splat/native-android-arm64": "0.5.2",
    "@ply2splat/native-darwin-arm64": "0.5.2",
    "@ply2splat/native-darwin-x64": "0.5.2",
    "@ply2splat/native-freebsd-x64": "0.5.2",
    "@ply2splat/native-linux-arm-gnueabihf": "0.5.2",
    "@ply2splat/native-linux-arm64-gnu": "0.5.2",
    "@ply2splat/native-linux-arm64-musl": "0.5.2",
    "@ply2splat/native-linux-x64-gnu": "0.5.2",
    "@ply2splat/native-linux-x64-musl": "0.5.2",
    "@ply2splat/native-win32-arm64-msvc": "0.5.2",
    "@ply2splat/native-win32-ia32-msvc": "0.5.2",
    "@ply2splat/native-win32-x64-msvc": "0.5.2"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@napi-rs/wasm-runtime": "^1.0.7"
  }
}
